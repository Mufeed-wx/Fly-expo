<style>
    .cart-list {
        height: 400px;
        width: 800px;
        background-color: rgb(248, 187, 248);
        border-radius: 3px;
        box-shadow: 1px 5px 10px 1px rgb(0 0 0 / 40%);
        margin-left: 0px;
    }
</style>
<main>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-11">
                <div class="row mt-3">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#CategoryModal">Home Page
                        Carousel
                    </button>
                </div>
            </div>

            {{#each banner}}
            <div class="col-md-11 justify-content-end">
                <div class="row mt-3 mb-3 justify-content-center">

                    <div class="cart-list">
                        <a class="btn " type="button" data-bs-toggle="modal" data-bs-target="#Carousel_edit_Modal"><i
                                class="icon-cog-p fas fa-edit "></i></a>
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="/img/curousel/{{this.image.[0]}}" class="ad-cur-img" alt="">
                                    <div class="carousel-caption-ad">
                                        <div class="container">
                                            <div class="row justify-content-start">
                                                <div class="col-lg-10">
                                                    <h2 class="ad-cur-display-2 " style="color: black;">
                                                        {{this.Curousel_title.[0]}}</h2>
                                                    <a href="" class="btn btn-primary rounded-pill ">Products</a>
                                                    <a href="" class="btn btn-secondary rounded-pill ">Services</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <img src="/img/curousel/{{this.image.[1]}}" class="ad-cur-img" alt="">
                                    <div class="carousel-caption-ad">
                                        <div class="container">
                                            <div class="row justify-content-start">
                                                <div class="col-lg-10">
                                                    <h2 class="ad-cur-display-2 " style="color: black;">
                                                        {{this.Curousel_title.[1]}}</h2>
                                                    <a href="" class="btn btn-primary rounded-pill ">Products</a>
                                                    <a href="" class="btn btn-secondary rounded-pill ">Services</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <img src="/img/curousel/{{this.image.[0]}}" class="ad-cur-img" alt="...">
                                    <div class="carousel-caption-ad">
                                        <div class="container">
                                            <div class="row justify-content-start">
                                                <div class="col-lg-10">
                                                    <h2 class="ad-cur-display-2 " style="color: black;">
                                                        {{this.Curousel_title.[0]}}</h2>
                                                    <a href="" class="btn btn-primary rounded-pill ">Products</a>
                                                    <a href="" class="btn btn-secondary rounded-pill ">Services</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden ">Next</span>
                            </button>

                        </div>
                    </div>
                </div>


                <div class="row mt-3">
                    <div class="modal fade" id="Carousel_edit_Modal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">New message</h5><br>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>

                                <div class="modal-body">
                                    <form action="/admin/user-home-management/?id={{this._id}}"
                                        enctype="multipart/form-data" method="post">
                                        <div class="mb-3">
                                            <label id="modal_body" for="recipient-name" class="col-form-label">First
                                                Banner
                                                Title</label>
                                            <input type="text" class="form-control" id="recipient-name"
                                                value="{{this.Curousel_title.[0]}}" name="Curousel_title1" required />
                                        </div>
                                        <div class="mb-3">
                                            <label id="modal_body" for="recipient-name" class="col-form-label">Second
                                                Banner
                                                Title</label>
                                            <input type="text" class="form-control" id="recipient-name"
                                                value="{{this.Curousel_title.[1]}}" name="Curousel_title2" required />
                                        </div>
                                        <div class="mb-3">
                                            <label id="modal_body" for="recipient-name" class="col-form-label">Third
                                                Banner
                                                Title</label>
                                            <input type="text" class="form-control" id="recipient-name"
                                                value="{{this.Curousel_title.[2]}}" name="Curousel_title3" required />
                                        </div>
                                        <div class="mb-3">
                                            <label for="recipient-name" class="col-form-label">Select Banner
                                                Images</label>
                                            <input type="file" class="form-control" multiple id="recipient-name"
                                                name="image" required />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-danger">Add</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>
    </div>

</main>