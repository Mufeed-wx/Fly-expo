<main>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-11">
                {{!-- start modal -------------------------------------------------------------- --}}
                <div class="row mt-3">
                    {{!-- table data---------------------------------------------------------------- --}}
                    <div class="row justify-content-center">
                        <div class="col-md-9">
                            <div class="row mt-3">
                                <div class="d-flex post-entry">
                                    <table id='example'
                                        class='table table-striped table-light table-bordered border-primary mt-2'
                                        style='width:100%'>
                                        <thead>
                                            <tr>

                                            <tr>
                                                <th>Image</th>
                                                <th>Product Name</th>
                                                <th>Prize/Kg</th>
                                                <th>Quantity</th>
                                                <th>Total prize</th>
                                            </tr>
                                            </tr>

                                        </thead>
                                        <tbody>
                                            {{#each data.products}}
                                            <tr>
                                                <td><img src="/{{this.productId.image.[0]}}" width="50em" alt=""></td>
                                                <td>{{this.productId.Product_Name}}</td>
                                                <td>${{this.productId.Product_Prize}}</td>
                                                <td>{{this.quantity}}Kg</td>
                                                <td>${{subTotal this.productId.Product_Prize this.quantity}}</td>
                                            </tr> {{/each}}
                                            <tr>
                                                <td></td>
                                                <td>Total</td>
                                                <td></td>
                                                <td></td>
                                                <td>${{data.finalCost}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
</main>