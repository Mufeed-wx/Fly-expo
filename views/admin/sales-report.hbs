<main>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-11 pe-0">
                <div class="row mt-3">
                    <div class="col-md-11 ms-4">
                        <div class="row"> <button type="button" class="btn btn-danger">Sales
                                Report
                            </button></div>
                    </div>



                    {{!-- table data---------------------------------------------------------------- --}}
                    <div class="row" id="order-details">
                        <div class="col-md-12 ">
                            <div class="d-flex justify-content-center mt-3">
                                <div class="d-flex post-entry">
                                    <table id="example"
                                        class='table display nowrap table-striped table-light table-bordered border-primary mt-2'
                                        style='width:100%'>
                                        <thead>
                                            <tr>

                                                <th>No.</th>
                                                <th>Date</th>
                                                <th>Name</th>
                                                <th>Payment method</th>
                                                <th>Quantity</th>
                                                <th>Total price </th>

                                            </tr>

                                        </thead>
                                        <tbody>
                                            {{#each data}}
                                            <tr>
                                                <td>{{add @index 1}}</td>
                                                <td>{{this.date}}</td>
                                                <td>{{this.userID.Company_Name}}</td>
                                                <td>{{this.paymentMethod}}</td>
                                                <td>{{this.totallQuantity}}</td>

                                                <td>{{this.finalCost}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td data-visible="false"></td>
                                                <td data-visible="false"></td>
                                                <td data-visible="false"></td>
                                                <td data-visible="false"></td>
                                                <td>Total</td>
                                                <td>{{salesdata.totalRevenue}}</td>

                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
</main>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]

        });
    });
</script>

