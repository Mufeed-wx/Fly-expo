    td,
    th {
        font-size: 13px;
    }

    .container,
    .container-lg,
    .container-md,
    .container-sm {
        max-width: 1004px;
    }

    .dt-buttons {
        margin: 20px;
        justify-content: space-between;
    }

    .dataTables_filter {
        margin-left: 200px;
