                            <div class='col-md-6 '>
                                <div class=' mb-3 card-acc-list pb-2 border-0'>
                                    <div class="ya-card-cell ">
                                        <h6 class="pt-2 m-0">Shipping address</h6>
                                        <h6 class="pt-2 m-0">Mr:{{orderAddress.name}}</h6>
                                        <div><span class="address-text">Lulu-hyper</span></div>
                                        <div><span class="address-text">{{orderAddress.street}}</span></div>
                                        <div><span class="address-text">PO:{{orderAddress.pincode:}}</span></div>
                                        <div><span class="address-text">{{orderAddress.country}}</span></div>
                                        <div><span class="address-text">{{orderAddress.state}}</span></div>
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6  '>
                                <div class=' mb-3 card-acc-list pb-2 border-0'>
                                    <div class="ya-card-cell ">
                                        <h6 class="pt-2 m-0">Payment method</h6>
                                        {{#ifEquals paymentMethod 'COD'}}<h6 class="pt-2 m-0">Cash on delivery</h6>
                                        {{/ifEquals}}
                                        {{#ifEquals paymentMethod 'Razorpay'}}<h6 class="pt-2 m-0">Online Payment
                                           </h6>{{/ifEquals}}  
                                    </div>
                                </div>
                                <div>
                                    <div class=' mb-3 card-acc-list pb-2 border-0'>
                                        <div class="ya-card-cell input_promotion">
                                            <h6 class="coupen-text pt-2 m-0 ">PGift cards, Voucher & Promotional codes
                                            </h6>
                                            <div class="input_promotion" style="display: flex;"><input class="coupen-in"
                                                    id="coupen-apply" name="applyCoupen" type="text"><button
                                                    onclick="coupenApply();" class="coupen-apply-a"><span
                                                        class="coupen-apply-span">Apply</span></button>
                                            </div>
                                        </div>
                                        <div class="ya-card-cell promotion_applied" style="display: none;">
                                            <div>
                                                <h6 class="coupen-text pt-2 m-0 ">PGift cards, Voucher & Promotional
                                                    codes applied
                                                </h6>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-4'>
                            <div class='card-body pl-2' style="border-style: ridge;margin-left: 6px;">
                                <div class="">
                                    <a class="btn deliver-to" onclick="placeordermodal();"><span class="deliver-to-span">Place
                                            your
                                            order</span></a>
                                </div>

                                <div class="order-summery-main">
                                    <h6 class="order-summery-text"> Order Summery</h6>
                                    <div class="col-12" style="display: flex;">
                                        <div class="col-8" style=""><span class="final-data">Items:</span></div>
                                        <div class="col-4"></span><span class="final-data-value">$121</span></div>
                                    </div>
                                    <div class="col-12" style="display: flex;">
                                        <div class="col-8" style=""><span class="final-data">Delivery:</span></div>
                                        <div class="col-4"></span><span class="final-data-value">$21</span></div>
                                    </div>
                                    <div class="col-12" style="display: flex;">
                                        <div class="col-8" style=""><span class="final-data">Total:</span></div>
                                        <div class="col-4"></span><span class="final-data-value"
                                                id="total_old">${{session.totalAmount.total}}</span></div>
                                    </div>
                                    <div class="col-12 " style="display: flex;" id="">
                                        <div class="col-8 promotion"><span class="final-data">Promotion Applied</span>
                                        </div>
                                        <div class="col-4 promotion"></span><span class="final-data-value">$</span><span
                                                class="final-data-value" id="applied">0</span></div>
                                    </div>
                                    <div class="col-12 mt-3" style="display: flex;">
                                        <div class="col-8" style=""><span class="final-data-value-total">Order
                                                Total</span>
                                        </div>
                                        <div class="col-4"></span><span class="final-data-value-total">$</span><span
                                                class="final-data-value-total"
                                                id="total-prize">{{session.totalAmount.total}}</span></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class='mt-0 mt-4' />
            </div>
        </div>
    </div>
</div>
