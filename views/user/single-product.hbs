    <div class="container">
        <div class='row row-mai  d-flex justify-content-center mt-0 align-items-center h-100'>
            <div class='col col-lg-12 mt-3 mb-5 mb-lg-0'>
                <div class='card mb-3' style='border-radius: .5rem;padding: 40px 38px;border-radius: 0px;'>

                    <div class='row g-0'>
                        <div class='col-md-12'>
                            <div class="">
                                <div class="row">
                                    <div class="col-md-6">
