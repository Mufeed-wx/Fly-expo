                    </div>
                    <div class="col align-self-center text-right text-muted">{{cartCount}} Items</div>
                </div>
            </div>
            {{#if session.cart.Cartdata}}
            {{#each session.cart.Cartdata}}
            <div class="row border-top border-bottom" style="color: green; text-shadow: #000; " id="cart-data">
                <div class="row main align-items-center">
                    <a class="col-2" href=""><img class="img-fluid" src="/{{this.productId.image.[0]}}"></a>
                    <div class="col">
                        <div class="row text-muted"></div>
                        <div class="row">{{this.productId.Product_Name}}</div>
                    </div>



                    <div class="col">
                        <div class=""><input data-id="{{this.productId._id}}" id="cart-in"
                                onchange="changeCartQty(this);" border-3 border-danger type="number"
                                value="{{this.quantity}}" class="form-control input-cart form-control-sm" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">$ {{this.productId.Product_Prize}}</div>
                    </div>

                    <div class="col" >
                        <div class="row">${{subTotal this.quantity this.productId.Product_Prize}}</div>
                    </div>
                    <div class="col">
                        <button class="border-0" data-id="{{this.productId._id}}" id="delete-cart"
                            onclick="deletecart(this);">
                            <div class="col"><span class="close">&#10005;</span></div>
                        </button>
                    </div>

                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="row border-top border-bottom" style="color: green; text-shadow: #000; " id="cart-data">
                <div class="row main align-items-center">
                    <div class="col">
                        <div class="row text-muted"></div>
